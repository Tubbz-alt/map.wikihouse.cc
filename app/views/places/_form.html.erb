<%= simple_form_for @place, html: { class: "new_place" } do |f| %>
  <h2>2. Please add details</h2>

  <fieldset>
    <legend>Basic Details</legend>
    <% if @place.class == Contributor %>
      <%= f.input :name, autofocus: true %>
      <%= f.input :url, as: :url, label: "URL" %>
      <%= f.input :phone %>
      <%= f.input :description, label: "Your involvement in WikiHouse" %>
    <% elsif @place.class == Build %>
      <%= f.input :name, autofocus: true, label: "Build Name" %>
      <%= f.input :url, as: :url, label: "URL" %>
      <%= f.input :description %>
    <% end %>
  </fieldset>

  <fieldset>
    <legend>Location</legend>
    <%= f.input :address, as: :string, input_html: { id: 'place_address' }, hint: "You can drag the map marker to position it more accurately" %>
    <div id="geocomplete-map"></div>
    <%= f.input :lat, input_html: { id: 'place_lat' }, as: :hidden %>
    <%= f.input :lng, input_html: { id: 'place_lng' }, as: :hidden %>
  </fieldset>

  <h2>3. Anything else you'd like to add?</h2>
  <%= f.input :notes %>

  <%= f.button :submit, "Submit for review" %>
<% end %>
