<div class="container" id="form">

  <h2>2. Please add details</h2>

  <%= simple_form_for @place do |f| %>
    <fieldset>
      <legend>Basic Details</legend>
      <%= f.input :name, autofocus: true %>
      <%= f.input :description %>
    </fieldset>

    <fieldset>
      <legend>Location</legend>
      <%= f.input :address, as: :string, input_html: { id: 'place_address' } %>
      <div id="geocomplete-map"></div>
      <%= f.input :lat, input_html: { id: 'place_lat' }, as: :hidden %>
      <%= f.input :lng, input_html: { id: 'place_lng' }, as: :hidden %>
    </fieldset>

    <fieldset>
      <legend>Contact Details</legend>
      <%= f.input :phone %>
      <%= f.input :url %>
    </fieldset>

    <%= f.submit 'Submit Place', class: 'button' %>
  <% end %>

  <h2>3. Anything else you'd like to add?</h2>

</div>
