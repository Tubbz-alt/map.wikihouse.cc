<h1><%= @place %></h1>
<%= @place.current_state %>

<%= simple_format @place.description %>

<% if @place.awaiting_review? %>
  <p>Thanks for submitting your project, it is now being reviewed.</p>
<% end %>

<% if params[:review] %>
  <% @place.current_state.events.keys.each do |key| %>
    <%= form_for @place, url: transition_place_path(@place) do |f| %>
      <%= hidden_field_tag :state_name, key %>
      <%= submit_tag key %>
    <% end %>
  <% end %>
<% end %>
