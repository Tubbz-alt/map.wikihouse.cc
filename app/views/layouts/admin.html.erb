<!DOCTYPE html>
<html>
  <head>
    <%= render "layouts/head" %>
    <%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin', 'data-turbolinks-track': 'reload' %>
    <title>Admin | WikiHouse Map</title>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <ul class="nav navbar-nav">
          <% Place.workflow_spec.states.keys.map(&:to_s).each do |state| %>
            <%= nav_link state %>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
